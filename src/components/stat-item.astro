---
export interface Props {
  id: string; // e.g. "count1"
  value: string;
  label: string;
}
const { id, value, label } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-6">
  <slot />
  <!-- icon -->
  <div class="space-y-2 text-center">
    <!-- ðŸ‘‡ Add the id back so your counter script works -->
    <span id={id} class="text-3xl font-semibold text-primary">{value}</span>
    <p class="text-base-content/80">{label}</p>
  </div>
</div>
